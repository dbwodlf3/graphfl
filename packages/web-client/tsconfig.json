{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "ES5",
        "lib": ["ES2020", "DOM"],
        "module": "CommonJS",
        "inlineSourceMap": true,
        "rootDir": "./",
        "removeComments": true,
        "strict": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
    },
    "include":["./**/*.ts"],
    "exclude": ["dist"]
}